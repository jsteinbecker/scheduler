extends base

block title
    title ##{schedule.num}, #{schedule.year} | SCHEDULE

block styles
    style.
        .red {color: red;}
        .p-50 {padding: 50px;}
        .dashed {border: 1px dashed #ffffff77;}


block content

    script(type="text/hyperscript").
        behavior DeleteButton
            on click call confirm("Are you sure you want to delete this schedule?")
            if result is true
                go to url `delete/` end

    .p-10
        a(href='../')
            iconify-icon(icon="mdi:arrow-left" @inline="true")
            | Department Home

        h1.text-3xl Schedule Detail
        h2.text-2xl Schedule ##{schedule.num}, #{schedule.year}

        hr

        .bg-red-100.text-red-400.text-xs.px-1.w-fit.rounded.cursor-pointer(_="install DeleteButton" class="hover:bg-red-200 hover:bg-opacity-25")
            iconify-icon.red(icon="mdi:delete" @inline="true")
            | Delete Schedule


        h3.text-lg Versions

        .flex.flex-row
            each version in schedule.versions.all
                a.bordered(href='v/#{version.num}/')
                    iconify-icon(icon="mdi:calendar-blank")
                    .float-right #{version.show_percent}
                    h3.thin
                        | Version #{version.num} (#{version.get_status_display})

            a.bordered.dashed(href="v/new/" class="hover:bg-zinc-100 hover:bg-opacity-25")
                iconify-icon(icon="mdi:calendar-plus")
                p.text-xs.px-4 CREATE NEW

        .flex.flex-row.bordered
            .bg-zinc-100.text-zinc-900.rounded-sm.px-1.w-fit.m-2.text-center
                .text-3xl.font-thin.mt-3 #{schedule.pto_list.count} <br/>
                |PTO Requests
            .grid.grid-cols-3.m-1
                each employee in employees
                    a.text-xs(href="edit-pto/#{employee.slug}")
                        | #{employee}
                        span.bg-zinc-100.text-black.rounded-sm.ml-1.px-1(hx-get="data/emp-n-pto/#{employee.slug}/" hx-trigger="load")

