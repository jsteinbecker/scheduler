mixin heroSection(title, subtitle, description, maintitle, mainurl, secondarytitle, secondaryurl, bg, bgimg)

    section(class="grow bg-#{bg}-900 text-white rounded shadow"
        style="background-image: url(#{bgimg}); background-size: cover; background-position: center;")

      div(class="mx-auto max-w-screen-xl px-4 py-2 lg:flex lg:h-screen lg:items-center")
        div(class="mx-auto max-w-3xl text-center")
          div(class="bg-zinc-100 rounded p-4 backdrop-blur-lg bg-opacity-20")
            h1(class="bg-gradient-to-r from-green-700 via-blue-800 to-purple-900 bg-clip-text text-3xl text-transparent sm:text-5xl")

              span.font-extrabold #{title}
              span.text-lg.font-md(class="sm:block") #{subtitle}

            p(class="mx-auto mt-4 max-w-xl sm:text-xl/relaxed text-zinc-800")
              | #{description}

          div(class="mt-8 flex flex-wrap justify-center gap-4")

            a(class="block w-full backdrop-blur-lg bg-opacity-75 rounded border-4 border-blue-100 bg-blue-600 px-12 py-3 text-sm font-medium text-white hover:bg-indigo-700 hover:text-white focus:outline-none focus:ring active:text-opacity-75 sm:w-auto",
                href= mainurl)
              | #{maintitle}

            a(class="block w-full backdrop-blur-lg rounded border-4 border-sky-600 px-12 py-3 text-sm font-medium text-white hover:bg-blue-600 focus:outline-none focus:ring active:bg-blue-500 sm:w-auto"
                href= secondaryurl)
              | #{secondarytitle}



.flex.flex-col.gap-40(class="lg:flex-row lg:justify-between lg:items-center")

    each dept in organization.departments.all

        - var main      = {'title': 'View', 'url': 'dept/' + dept.slug + '/'};
        - var secondary = {'title': 'Admin','url': '/admin/org/department/' + str(dept.pk) + '/change/'};
        - var dpt       = {'title': dept.name, 'subtitle': dept.full_name,'description': 'Access ' + dept.name + ' Employees & Schedules', 'color': 'sky'}
        - var bgimg     = '/static/img/ui/' + dept.slug + '-workspace.png';

        +heroSection(dpt.title, dpt.subtitle, dpt.description, main.title, main.url, secondary.title, secondary.url, dpt.color, bgimg)

